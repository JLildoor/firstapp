<div class="container">
  <p id="notice"><%= notice %></p>
</div>

<div class="container">
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <%= image_tag(@product.image_url, width: "350", class: "img-zoom", data_zoom_image: @product.image_url) %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Color:</strong>
    <%= @product.colour %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p>
    Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div>
  </p>

  <%= form_with(url: '/payments/create') do |form| %>
    <%= render partial: "shared/stripe_checkout_button" %>
    <%= hidden_field_tag(:product_id, @product.id) %>
  <% end %>

  <p>
    <strong>Customer Reviews:</strong>
    <%= @product.highest_rating_comment %>
    <%= @product.lowest_rating_comment %>
  </p>

  <div class="container">
    <p>
      <%= render 'comments' %>
    </p>
  </div>

  <p>
    <%= render 'new_comment' %>
  </p>
</div>

<div class="container">
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>
