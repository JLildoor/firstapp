<div class="container">
  <p id="notice"><%= notice %></p>
</div>

<div class="container">
  <% cache @product do %>
  <h2><%= @product.name %></h2>
  <p><%= @product.description %></p>
  <% end %>

  <p>
    <%= image_tag(@product.image_url, width: "350", class: "img-zoom", data_zoom_image: @product.image_url) %>
  </p>

  <p>
    <strong>Color:</strong>
    <%= @product.colour %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>

  <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>" id="average_rating"></div></p>

  <%= form_with(url: '/payments/create') do |form| %>
    <%= render partial: "shared/stripe_checkout_button" %>
    <%= hidden_field_tag(:product_id, @product.id) %>
  <% end %>

  <p>
    <strong>Customer Reviews:</strong>
    <%= @product.highest_rating_comment %>
    <%= @product.lowest_rating_comment %>
  </p>
</div>

<%= render 'new_comment' %>

<div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>

<%= render 'comments' %>

<div class="container">
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>
