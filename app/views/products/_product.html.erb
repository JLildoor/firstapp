 <div class="col-sm">
  <%= link_to product do %>
    <h1><%= product.name %></h1>
    <%= image_tag(product.image_url, class:"img-fluid") unless product.image_url.nil? %>
  <% end %>

  <p><%= product.description %></p>
  <p><strong>Color: </strong><%= product.colour %></p>
  <strong><%= number_to_currency(product.price) %></strong><br>
  <%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary" %>
  <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div><!-- end col -->
