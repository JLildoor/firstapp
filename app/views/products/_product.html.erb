<div class="col-sm">
  <%= image_tag(product.image_url, class:"img-fluid") unless product.image_url.nil? %>
  <a href="#"><h1><%= product.name %></h1></a>
  <p><%= product.description %></p>
  <p><strong>Color: </strong><%= product.colour %></p>
  <strong>$<%= product.price %></strong><br>
  <%= link_to 'Edit', edit_product_path(product) %>
  <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %>
</div><!-- end col -->
