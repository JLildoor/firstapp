<div class="container-fluid">
  <div class="col-sm">
    <%= link_to product do %>
      <h2><%= product.name %></h2>
      <%= image_tag(product.image_url, class:"img-fluid") unless product.image_url.nil? %>
    <% end %>

    <% cache @product do %>
      <p><%= product.description %></p>
      <p><strong><%= number_to_currency(product.price) %></strong></p><br>
      <% if signed_in? && current_user.admin? %>
        <%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary" %>
        <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      <% end %>
    <% end %>
  </div><!-- end col -->
</div>
