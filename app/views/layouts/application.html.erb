<!DOCTYPE html>
<html>
  <head>
    <title>Firstapp</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="container-fluid">
      <!-- navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to "BFDW", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id=navbarSupportedContent>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to "Home", root_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "About", simple_pages_about_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Contact", simple_pages_contact_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Products", products_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "nav-link") %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to('Login', new_user_session_path, class: "nav-link") %>
            </li>
            <% end %>
          </ul>
          <form class="navbar-form navbar-left">
            <div class="form-group">
              <%= form_with(url: products_path, method: 'get', local: true) do |form| %>
                <%= form.label :q, 'Search for:' %>
                <%= form.text_field :q, id: 'q', value: params[:q] %>
                <%= form.submit 'Search' %>
              <% end %>
            </div><!-- end search form -->
          </form>
        </div><!-- end navbar-collapse -->
      </nav><!-- end navbar -->
    </div><!-- end container -->
    <div class="alert">
      <% if notice %>
        <p class="alert alert-dark" role="alert"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-dark" role="alert"><%= alert %></p>
      <% end %>
    </div>
    <%= yield %>

    <footer class="site-footer">
      &copy; <%= Time.current.year %> BFDW
    </footer>
  </body>
</html>
